@media (max-width: bp_tablet)
  .hero-text .aod-logo
    width 40%

  .hero-text h1
    font-size 28px

  .divisions-grid
    gap 8px

    .division-icon
      width 70px
      padding 8px

      img
        width 32px
        height 32px

      .division-name
        font-size 8px

  .apply-form
    width 95%
    max-width none
    padding spacing_lg
    max-height 85vh
    overflow-y auto

    .apply-step
      gap spacing_md

      .step-number
        width 30px
        height 30px
        font-size 14px

      .step-content h2
        font-size 16px

      .step-content p
        font-size 13px

    .games-listing
      grid-template-columns repeat(auto-fill, minmax(60px, 1fr))
      gap spacing_sm

      .division-select
        padding spacing_xs

        img
          width 32px
          height 32px

        .division-label
          font-size 8px

@media (max-width: 1120px)
  h1, h2
    font-size 1.3em

@media (max-width: bp_desktop)
  .push
    margin-top 665px

  section
    min-height auto

  .mobile-nav
    .clan-logo,
    .hamburger,
    .nav-overlay
      display block

    .hamburger
      z-index 1001
      transition color transition_normal ease

    .nav-overlay
      position fixed
      top 0
      left 0
      width 100%
      height 100%
      background overlay_dark
      z-index 999
      opacity 0
      visibility hidden
      pointer-events none
      transition opacity transition_normal ease, visibility transition_normal ease

      &.active
        opacity 1
        visibility visible
        pointer-events auto

    .nav-items
      position fixed
      top 0
      right -280px
      width 280px
      height 100%
      background linear-gradient(180deg, #1a1a1a 0%, dark_bg 100%)
      z-index 1000
      overflow-y auto
      transition right transition_normal ease
      box-shadow -5px 0 20px rgba(0, 0, 0, 0.5)
      display block !important

      &.active
        right 0

      .nav-drawer-header
        display flex
        justify-content space-between
        align-items center
        padding spacing_lg
        border-bottom 1px solid border_subtle

        img
          height 50px
          drop-shadow-md()

        .nav-close
          color muted_color
          font-size 24px
          cursor pointer
          padding spacing_sm
          transition color transition_normal ease

          &:hover
            color header_color

      ul
        padding 0
        margin 0

      li a
        display block
        font-family font_face
        font-size 16px
        padding 18px 25px
        border-bottom 1px border_subtle solid
        color rgba(255, 255, 255, 0.7)
        text-transform uppercase
        letter-spacing 1px
        transition all transition_normal ease

        &:hover
          color header_color
          background rgba(aod_red, 0.2)
          padding-left spacing_xl

  .collection .item
    flex 0 80%

  section
    padding-left spacing_md
    padding-right spacing_md

  section .section-content-container
    width 100%
    max-width 100%
    padding 0 spacing_sm
    margin 0 auto

  .divisions-grid
    padding 0 spacing_xs

  .holiday-content
    padding 0 spacing_sm

  .merch-carousel
    padding 0

  .primary-nav ul li
    background none

  .primary-nav
    position fixed
    top 0
    z-index 100

  .section--short-width
    display block

  section.lobby
    background none

    .divisions-list
      margin-top spacing_lg

  .footer-section
    flex 100%
    padding spacing_md

  .apply-form
    width 90%
    max-width 550px
    max-height 90vh
    overflow-y auto
    padding spacing_xl

  #menu-primary
    display none

  .primary-nav .full-nav ul
    min-width auto
    width 100%

  section
    padding spacing_lg
    &.founded-info .section-image
      display none

    &.founded-info .section-blurb
      width 100%

  section.lobby .section-blurb
    margin-right spacing_2xl

@media (max-width: bp_desktop)
  section
    min-height auto

  .push
    margin-top 665px

  .hero-video
    position fixed
    top 0
    left 0
    width 100vw
    height 100vh
    z-index -1

  .hero-text
    position fixed
    top 80px
    left 50%
    transform translateX(-50%)
    z-index 0
    pointer-events none

    .play-button
      pointer-events auto

  section.founded-info .section-image
    position absolute
    top -130px
    right -60px

    img
      width 600px
      height 600px

@media (min-width: bp_desktop_lg)
  .section-content-container
    width 960px

  .push
    margin-top 665px
