@media (max-width: 720px)
  *, *::before, *::after
    box-sizing border-box

  html, body
    overflow-x hidden
    max-width 100vw
    width 100%

  section
    padding-left 10px !important
    padding-right 10px !important

  .section-content-container
    padding-left 10px !important
    padding-right 10px !important
    max-width 100% !important
    width 100% !important

  .divisions-grid
    padding 0 5px
    gap 10px

  .holiday-content
    padding 0 10px

  .merch-carousel
    padding 0

  .hero-text .aod-logo
    width 40%

  .hero-text h1
    font-size 28px





@media (max-width: 1120px)
  h1, h2
    font-size 1.3em

@media (max-width: 1230px)
  .push
    margin-top: 530px;
  .mobile-nav

    .clan-logo, .hamburger, .nav-overlay
      display block

    .hamburger
      z-index 1001
      transition color 0.3s ease

    .nav-overlay
      position fixed
      top 0
      left 0
      width 100%
      height 100%
      background rgba(0, 0, 0, 0.7)
      z-index 999
      opacity 0
      visibility hidden
      pointer-events none
      transition opacity 0.3s ease, visibility 0.3s ease

      &.active
        opacity 1
        visibility visible
        pointer-events auto

    .nav-items
      position fixed
      top 0
      right -280px
      width 280px
      height 100%
      background linear-gradient(180deg, #1a1a1a 0%, #111 100%)
      z-index 1000
      overflow-y auto
      transition right 0.3s ease
      box-shadow -5px 0 20px rgba(0, 0, 0, 0.5)
      display block !important

      &.active
        right 0

      .nav-drawer-header
        display flex
        justify-content space-between
        align-items center
        padding 20px
        border-bottom 1px solid rgba(255, 255, 255, 0.1)

        img
          height 50px
          filter drop-shadow(0 0 5px #000)

        .nav-close
          color #888
          font-size 24px
          cursor pointer
          padding 10px
          transition color 0.3s ease

          &:hover
            color #fff

      ul
        padding 0
        margin 0

      li a
        display block
        font-family font_face
        font-size 16px
        padding 18px 25px
        border-bottom 1px rgba(255, 255, 255, 0.1) solid
        color rgba(255, 255, 255, 0.7)
        text-transform uppercase
        letter-spacing 1px
        transition all 0.3s ease

        &:hover
          color #fff
          background rgba(223, 69, 69, 0.2)
          padding-left 30px

  .collection .item
    flex 0 80%

  section .section-content-container
    width auto !important
    max-width 100% !important
    padding 0 15px !important
    margin 0 auto !important

  .primary-nav ul li
    background none

  .primary-nav
    position fixed
    top 0
    z-index 100 !important  // Ensure nav is above hero video but doesn't push it

  .section--short-width
    display block !important

  section.lobby
    background none !important

    .divisions-list
      margin-top 20px

  .footer-section
    flex 100%
    padding 15px

  #menu-primary
    display none

  .primary-nav .full-nav ul
    min-width auto !important
    width 100% !important

  section
    padding 20px
    &.founded-info .section-image
      display none

    &.founded-info .section-blurb
      width 100%

  section.lobby .section-blurb
    margin-right 40px

@media (max-width: 1260px)
    .push
      margin-top: 625px;
    .hero-video
      position fixed !important
      top 0 !important
      left 0 !important
      width 100vw !important
      height 100vh !important
      z-index -1 !important

    .hero-text
      position fixed !important
      top 125px !important
      left 50% !important
      transform translateX(-50%) !important
      z-index 10 !important
  section.founded-info .section-image
    position absolute
    top -130px
    right -60px
    img
      width 600px
      height 600px

@media (min-width: 1280px)
  .section-content-container
    width 960px

  .push
    margin-top: 700px;
