*, *::before, *::after
  box-sizing border-box

html, body
  overflow-x hidden
  max-width 100vw

body
  background-color body_background_color
  margin 0
  padding 0
  height 100%

ul, ol
  list-style none

.division
    blockquote
        margin 30px 0
        .quote-author
            text-transform capitalize
            text-align center
            opacity 55%
        .quote
            font-weight 300
            font-size 120%
            text-align center
            color #8a6c6c
            font-style italic
            font-family Georgia, serif
            margin-bottom -10px
    ul li
        list-style none
        font-family font_face
        color rgba(255, 255, 255, .4)
        padding-bottom 10px

        &:before
          content "-"
          display inline-block
          margin-left -1.3em
          width 1.3em

strong
  color link_color

h1, h2, h3, h4
  font-family font_face
  color header_color
  line-height 1.2em
  text-transform uppercase

h1
  font-size 36px
  font-weight 500

h2
  &.subtitle
    font normal 24px / 1em MuseoSans, "century gothic", arial
    text-transform none

section
  padding 30px 0
  width 100%
  margin 0 auto
  display flex
  align-items center

  &.with-shadow
    box-shadow 0 0 10px #000

  .section--short-width
    display flex
    flex-direction row
    flex-wrap wrap

    .section-blurb, .section-image
      flex 50%

    .section-image
      text-align center

  a
    font-weight 700
    transition transition_slower

  .section-content-container
    position relative
    width 960px
    margin 0 auto
    vertical-align middle

    .section-sub-section
      margin-bottom 60px

  .section--centered
    text-align center

p
  color body_color
  font normal 16px / 1.8em "MuseoSans", "century gothic", arial
  line-height 26px

a
  color link_color
  text-decoration none
  transition color transition_slower

  &:hover
    color link_hover_color
    transition transition_slower

a.call-to-action-button
  display inline-flex
  align-items center
  gap 10px
  padding spacing_md spacing_2xl
  background linear-gradient(135deg, aod_red 0%, aod_red_dark 100%)
  border none
  border-radius 6px
  color #fff
  margin-top 20px
  font-family font_face
  font-size 14px
  text-transform uppercase
  letter-spacing 2px
  text-decoration none
  transition all transition_normal ease

  &.is-small
    padding spacing_sm spacing_lg
    margin-top 10px
    font-size 12px

  &:hover
    background linear-gradient(135deg, aod_red_light 0%, aod_red 100%)
    color #fff
    transform translateY(-3px)
    box-shadow 0 8px 25px alpha(aod_red, 0.4)

/** nav bar **/

.clan-logo
  drop-shadow-md()
  cursor pointer

.mobile-nav .nav-items, .mobile-nav .clan-logo, .mobile-nav .hamburger, .mobile-nav .nav-overlay
  display none

.mobile-nav .clan-logo
  padding 10px 0 0 20px

.mobile-nav .hamburger
  position fixed
  top spacing_lg
  right spacing_2xl
  cursor pointer
  color muted_color

  &:hover
    color muted_hover_color

.primary-nav
  z-index 50
  width 100%
  height 69px
  background url('/images/navbar-bg.jpg') repeat-x 0 0 body_background_color
  box-shadow 0 1px 10px darker_bg
  position relative
  transition all transition_slow ease

  .nav-texture
    background url('/images/navbar-texture.png') no-repeat center 0

  .full-nav ul
    text-align center
    margin 0 auto
    padding 0
    min-width 1000px
    overflow hidden

    li
      display inline-flex
      text-align center
      background url('/images/divider.jpg') no-repeat left bottom
      z-index 10
      height 68px

      &:first-of-type
        background none

      &.home
        position relative
        align-items center
        justify-content center

        img
          position absolute
          left 50%
          top 50%
          transform translate(-50%, -50%)
          height 50px
          width auto
          opacity 0
          pointer-events none
          transition opacity transition_slow ease

        &.show-logo
          img
            opacity 1
            pointer-events auto

          a
            opacity 0
            pointer-events none

      a
        display flex
        align-items center
        justify-content center
        height 100%
        width 100%
        padding 0 45px
        color nav_link_color
        font normal 16px / 1.8em "MuseoSans", "century gothic", arial
        text-transform uppercase
        text-shadow 0 2px 4px rgba(0, 0, 0, .3)
        transition all transition_normal ease
        position relative

        &::after
          content ''
          position absolute
          bottom 10px
          left 50%
          width 0
          height 2px
          background aod_red
          transition all transition_normal ease
          transform translateX(-50%)

        &:hover
          color link_hover_color
          text-decoration none

          &::after
            width 60%

        &.active a, &.current-menu-item a
          color #fff

section.primary-footer
  background url(footer_bg_image) no-repeat footer_section_bg_color center 0
  display block
  position relative

  &::before
    content ''
    position absolute
    left 0
    right 0
    bottom 100%
    height 50vh
    background-image repeating-linear-gradient(
      -45deg,
      transparent,
      transparent 10px,
      rgba(255, 255, 255, 0.015) 10px,
      rgba(255, 255, 255, 0.015) 20px
    )
    mask-image linear-gradient(to bottom, transparent 0%, black 100%)
    -webkit-mask-image linear-gradient(to bottom, transparent 0%, black 100%)
    pointer-events none
    z-index -1

  h1
    font-family font_face
    font-size 18px

  p
    font-size 16px

  .section-content-container
    display flex
    flex-direction row
    flex-wrap wrap

    .section-blurb
      flex 100%
      display flex
      padding 0 spacing_xl spacing_lg 0

      .logo
        flex-center()
        flex 20%

        img
          width 150px
          drop-shadow-md()

      .blurb-text
        flex 80%

.footer-section
  font-family Tahoma, sans-serif
  color footer_link_color
  flex 50%
  padding-top spacing_lg

  &.full-width
    flex 100%

  &.qtr-width
    flex 33%

  ul
    margin 0
    padding 0

  ul li
    line-height 25px
    display block
    font-size 16px
    padding-bottom 15px
    color rgba(255, 255, 255, .2)

    .meta
      display block

  a
    font-weight lighter
    transition all transition_normal ease

    &:hover
      color aod_red
      text-shadow 0 0 10px alpha(aod_red, 0.5)

.site-meta ul li
  display inline-block
  text-align center

.sitemap
  .sitemap-links ul
    display flex
    flex 50%
    flex-wrap wrap

    li
      padding 0
      flex 1 0 50%

  .social-media
    margin-top 25px

    a
      color footer_link_color
      transition all transition_normal ease

      &:hover
        color aod_red
        text-shadow 0 0 10px alpha(aod_red, 0.5)

    ul li
      display inline-block

.fixed, .stay-fixed
  position fixed
  top 0

.apply-overlay
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background rgba(0, 0, 0, 0.8)
  backdrop-filter blur(8px)
  -webkit-backdrop-filter blur(8px)
  z-index 998
  opacity 0
  transition opacity transition_normal ease

  &.active
    opacity 1

.apply-form
  position fixed
  top 50%
  left 50%
  transform translate(-50%, -50%) scale(0.9)
  width 90%
  max-width 600px
  max-height 90vh
  overflow-y auto
  padding spacing_2xl
  background linear-gradient(180deg, rgba(30, 30, 35, 0.98) 0%, rgba(15, 15, 20, 0.98) 100%)
  border 1px solid rgba(255, 255, 255, 0.1)
  border-radius 16px
  box-shadow 0 25px 80px rgba(0, 0, 0, 0.8), 0 0 40px rgba(139, 30, 30, 0.2)
  z-index 999
  opacity 0
  transition all transition_normal ease

  &.active
    opacity 1
    transform translate(-50%, -50%) scale(1)

.apply-close
  position absolute
  top spacing_md
  right spacing_md
  background none
  border none
  color rgba(255, 255, 255, 0.5)
  font-size 24px
  cursor pointer
  padding spacing_sm
  transition all transition_normal ease
  border-radius 50%

  &:hover
    color #fff
    background rgba(255, 255, 255, 0.1)

.apply-step
  display flex
  align-items flex-start
  gap spacing_lg
  text-align left
  margin-bottom spacing_lg

  .step-number
    flex-shrink 0
    width 36px
    height 36px
    background linear-gradient(135deg, aod_red 0%, aod_red_dark 100%)
    border-radius 50%
    display flex
    align-items center
    justify-content center
    font-family font_face
    font-size 16px
    font-weight 700
    color #fff

  .step-content
    flex 1

    h2
      font-size 18px
      margin 0 0 spacing_sm 0
      color header_color
      text-transform none
      background none
      height auto
      padding 0

    p
      margin 0
      font-size 14px
      color rgba(255, 255, 255, 0.6)
      line-height 1.5

.apply-divider
  height 1px
  background linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.1) 50%, transparent 100%)
  margin spacing_lg 0

.games-listing
  display grid
  grid-template-columns repeat(auto-fill, minmax(100px, 1fr))
  gap spacing_md
  padding spacing_md 0

  .division-select
    display flex
    flex-direction column
    align-items center
    gap spacing_xs
    padding spacing_sm
    border-radius 8px
    border 1px solid transparent
    background rgba(255, 255, 255, 0.03)
    transition all transition_normal ease
    text-decoration none

    &:hover
      background rgba(139, 30, 30, 0.2)
      border-color rgba(139, 30, 30, 0.5)
      transform translateY(-2px)

      img
        transform scale(1.1)
        filter drop-shadow(0 0 8px rgba(139, 30, 30, 0.6))

    img
      width 40px
      height 40px
      object-fit contain
      transition all transition_normal ease

    .division-label
      font-family "MuseoSans", "century gothic", arial, sans-serif
      font-size 9px
      color rgba(255, 255, 255, 0.5)
      text-align center
      text-transform uppercase
      letter-spacing 0.5px
      line-height 1.3
      max-width 100%

hr
    opacity .1

a
  &.tooltips
    position relative
    display inline

    span
      font-size 13px
      font-family font_face
      position absolute
      width 140px
      color #FFFFFF
      background #333333
      height 30px
      line-height 30px
      text-align center
      visibility hidden
      border-radius 6px

      &:after
        content ''
        position absolute
        top 100%
        left 50%
        margin-left -4px
        width 0
        height 0
        border-top 8px solid #333333
        border-right 8px solid transparent
        border-left 8px solid transparent

  &:hover
    &.tooltips
      span
        visibility visible
        opacity 0.8
        bottom 70px
        left 50%
        margin-left -76px
        z-index 999

.push
  clear both
  margin-top 100vh

.has-two-columns
  display flex

.has-two-columns > div
  padding 5px 10px

.margin-top-20
  margin-top 20px

.current-menu-item a
  color #fff

.primary-nav .commo-bar
  display none

.primary-nav.fixed .commo-bar
  display flex


.commo-bar
  width 100%
  padding 5px
  height 25px
  position fixed
  top 0
  background-color #590201
  display flex
  align-items center
  justify-content center
  border-bottom 1px solid rgba(255,255,255,.10)

.commo-item
  width 300px
  text-align center
  font-size 12px
