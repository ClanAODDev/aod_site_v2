.game-header
  display flex
  flex-direction row
  align-items center
  .game
    opacity 1
    margin-right 15px

.division-actions
  display flex
  gap 15px
  margin 20px 0

  .action-btn
    display inline-flex
    align-items center
    justify-content center
    padding 12px 28px
    border-radius 6px
    font-family font_face
    font-size 14px
    text-transform uppercase
    letter-spacing 1px
    text-decoration none
    transition all transition_normal ease
    border 1px solid border_medium
    color header_color
    background transparent

    &:hover
      border-color rgba(255, 255, 255, 0.8)
      background overlay_light

    &.primary
      background linear-gradient(135deg, aod_red 0%, aod_red_dark 100%)
      border-color transparent

      &:hover
        background linear-gradient(135deg, aod_red_light 0%, aod_red 100%)
        transform translateY(-2px)
        box-shadow 0 4px 15px rgba(aod_red, 0.3)

section.division, section.page
  margin-top 70px

  .youtube-embed
    width 100%
    height 500px
    border 0

  h2
    background url('/images/division-header-bg.jpg') no-repeat center
    height 50px
    padding-left 15px
    display flex
    align-items center

  p img
    padding 5px
    filter drop-shadow(0 0 0.75rem black)
    max-width 100%
    border 1px solid rgba(255, 255, 255, .25)

  #sub-nav
    margin-top 180px
    a
      color header_color
    ul
      padding 0
      text-indent 0
      li
        margin-bottom spacing_md
        display inline-block
        padding spacing_md
        font-family font_face
        text-transform uppercase
        border solid 1px header_color
        border-radius 10px
        margin-right spacing_md
        opacity 0.3
        transition opacity transition_slower ease
        color header_color
        &:hover
          opacity 1
          transition opacity transition_slower ease
          cursor pointer

  .command-staff
    font-family font_face
    .member
      border solid 1px border_medium
      border-radius 10px
      padding spacing_md
      display inline-block
      flex-direction column
      margin-right spacing_md
      transition border transition_slower ease
      &:hover
        border solid 1px header_color
        cursor pointer
        transition border transition_slower ease
      .name
        text-transform uppercase
        font-size 20px
      .position
        color border_medium

.screenshot-gallery
  margin 40px 0
  width 100%
  text-align left
  clear both

  h2
    background url('/images/division-header-bg.jpg') no-repeat center
    height 50px
    padding-left 15px
    display flex
    align-items center
    margin-bottom 20px
    margin-top 0

  .carousel-container
    display flex
    align-items center
    gap 10px
    position relative

  .carousel-viewport
    overflow hidden
    flex 1

  .gallery-grid
    display flex !important
    gap 20px
    transition transform 0.4s ease
    width max-content

  .gallery-item
    display block
    overflow hidden
    border-radius 8px
    border 1px solid rgba(255, 255, 255, 0.15)
    transition all transition_normal ease
    line-height 0
    width calc((100vw - 140px) / 3 - 14px)
    max-width 350px
    min-width 200px
    flex-shrink 0
    text-align left
    position relative
    cursor pointer

    &::after
      content '\f065'
      font-family 'Font Awesome 5 Free'
      font-weight 900
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background rgba(0, 0, 0, 0)
      flex-center()
      color rgba(255, 255, 255, 0)
      font-size 32px
      transition all transition_normal ease
      pointer-events none

    &:hover
      border-color rgba(255, 255, 255, 0.5)

    &:hover::after
      background rgba(0, 0, 0, 0.5)
      color rgba(255, 255, 255, 0.9)

    img
      width 100% !important
      height 180px !important
      object-fit cover !important
      display block !important
      padding 0 !important
      margin 0 !important
      filter none !important
      border none !important
      border-radius 0 !important
      max-width 100% !important

  .carousel-nav
    background overlay_light
    border 1px solid border_medium
    color header_color
    width 40px
    height 40px
    border-radius 50%
    font-size 24px
    cursor pointer
    transition all transition_normal ease
    flex-center()
    flex-shrink 0

    &:hover
      background rgba(255, 255, 255, 0.2)
      border-color rgba(255, 255, 255, 0.6)

    &:disabled
      opacity 0.3
      cursor not-allowed

  .carousel-dots
    display flex
    justify-content center
    gap 8px
    margin-top spacing_md

    .dot
      width 10px
      height 10px
      border-radius 50%
      background border_medium
      border none
      cursor pointer
      transition all transition_normal ease

      &:hover
        background rgba(255, 255, 255, 0.5)

      &.active
        background rgba(255, 255, 255, 0.9)

  @media (max-width: bp_tablet)
    .gallery-item
      width calc((100vw - 100px) / 2 - 10px)

  @media (max-width: bp_mobile)
    .carousel-container
      gap spacing_xs

    .carousel-nav
      width 30px
      height 30px
      font-size 18px

    .gallery-item
      width calc(100vw - 100px)

.lightbox-overlay
  display none
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background rgba(0, 0, 0, 0.95)
  z-index 9999
  align-items center
  justify-content center

  &.active
    display flex

  .lightbox-content
    max-width 90vw
    max-height 85vh
    position relative
    text-align center

    img
      max-width 100%
      max-height 80vh
      border-radius 4px

  .lightbox-caption
    color header_color
    font-size 14px
    margin-top spacing_md
    opacity 0.8

  .lightbox-counter
    position absolute
    bottom spacing_lg
    left 50%
    transform translateX(-50%)
    color rgba(255, 255, 255, 0.6)
    font-size 13px

  .lightbox-close
    position absolute
    top spacing_lg
    right 25px
    background none
    border none
    color header_color
    font-size 40px
    cursor pointer
    opacity 0.7
    transition opacity transition_fast
    z-index 10

    &:hover
      opacity 1

  .lightbox-prev
  .lightbox-next
    position absolute
    top 50%
    transform translateY(-50%)
    background none
    border none
    color header_color
    font-size 50px
    cursor pointer
    opacity 0.5
    transition opacity transition_fast
    padding spacing_lg
    z-index 10

    &:hover
      opacity 1

  .lightbox-prev
    left spacing_sm

  .lightbox-next
    right spacing_sm
