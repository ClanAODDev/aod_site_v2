section.lobby
    background-image url(divisions_page_bg) , url(divisions_page_top_bg)
    background-repeat no-repeat, repeat-x
    background-position top center
    background-color #0c1318
    margin-top 40px
    min-height auto

    .section-blurb
        text-align right
        margin-top 50px

.divisions-list
    margin-top 160px
    margin-bottom 60px

.collection
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content center
    gap spacing_lg

    .item.game-button
        display flex
        flex-direction row
        align-items center
        flex 0 0 calc(25% - spacing_lg)
        color #fff
        padding spacing_lg
        background linear-gradient(135deg, alpha(#1a1a2e, 0.8) 0%, alpha(#0d0d1a, 0.9) 100%)
        border 1px solid alpha(#fff, 0.08)
        border-radius 12px
        position relative
        overflow hidden
        transition all transition_normal cubic-bezier(0.4, 0, 0.2, 1)

        &::before
            content ''
            position absolute
            top 0
            left 0
            right 0
            bottom 0
            background linear-gradient(135deg, alpha(hover_glow, 0) 0%, alpha(hover_glow, 0.03) 100%)
            opacity 0
            transition opacity transition_normal ease

        &:hover
            cursor pointer
            transform translateY(-4px) scale(1.02)
            border-color alpha(hover_glow, 0.3)
            box-shadow 0 12px 40px alpha(#000, 0.4), 0 0 30px alpha(hover_glow, 0.1)

            &::before
                opacity 1

            .icon .game
                opacity 1
                transform scale(1.1)
                filter drop-shadow(0 0 8px alpha(hover_glow, 0.6))

            .meta .title
                color hover_glow

        .icon
            margin-right spacing_lg
            position relative
            z-index 1

            .game
                width 64px
                height 64px
                object-fit contain
                opacity 0.7
                transition all transition_normal ease

        .meta
            line-height 1.5
            position relative
            z-index 1

        .title
            font-family font_face
            font-size 16px
            font-weight 600
            transition color transition_normal ease

        .members
            font-family font_face
            font-size 13px
            color alpha(#fff, 0.5)
            margin-top 4px

    +respond-tablet()
        .item.game-button
            flex 0 0 calc(50% - spacing_lg)

    +respond-mobile()
        .item.game-button
            flex 0 0 100%

            .icon .game
                width 48px
                height 48px
