/**
 * ----------------
 * HERO AREA
 * ----------------
 **/

@import "partials/games"

/**
 * ----------------
 * STATS BAR
 * ----------------
 **/
.stats-bar
  background linear-gradient(135deg, rgba(223, 69, 69, 0.9) 0%, rgba(139, 30, 30, 0.95) 100%)
  padding 30px 0
  position relative
  z-index 10

  .stats-container
    display flex
    justify-content center
    align-items center
    gap 60px
    max-width 1200px
    margin 0 auto
    padding 0 20px

  .stat-item
    text-align center
    color #fff

    .stat-number
      display block
      font-size 48px
      font-weight 700
      font-family font_face
      line-height 1
      text-shadow 0 2px 10px rgba(0, 0, 0, 0.3)

    .stat-label
      display block
      font-size 14px
      text-transform uppercase
      letter-spacing 2px
      opacity 0.9
      margin-top 8px

  @media (max-width: 720px)
    .stats-container
      flex-wrap wrap
      gap 30px

    .stat-item
      flex 0 0 45%

      .stat-number
        font-size 36px

.aod-logo
  filter drop-shadow(0px 0px 5px #000)
  -webkit-filter drop-shadow(0px 0px 5px #000)
  width 250px

.hero-video
  position fixed
  top 0
  left 0
  width 100vw
  height 100vh
  z-index -1
  overflow hidden
  transition opacity 0.3s ease
  background #000  // Fallback background

  .hero-text
    color #fff
    z-index 3
    position fixed
    top 70px
    left 50%
    transform translateX(-50%)
    text-align center
    width 100%
    max-width 1200px

    .play-button
      background url('/images/play-button.png') no-repeat
      width 53px
      height 61px
      margin 0 auto
      margin-top 60px
      text-indent -9999px
      transition filter 0.6s ease

      &:hover
        filter drop-shadow(0px 0px 10px #fff)
        -webkit-filter drop-shadow(0px 0px 10px #fff)
        transition filter 0.6s ease
        cursor pointer

    h1
      font-size 48px
      text-shadow 0 0 2px rgba(0, 0, 0, .4)

.twitch-live
  right 40px
  color #df4545
  position relative

.intro-video iframe
  width 100vw
  height 75vh

.grid
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  z-index 2
  background-image url('/images/grid.png') , url('/images/video-overlay.png')
  background-color rgba(0, 0, 0, .5)
  background-repeat repeat, repeat-x

.video-container
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  overflow hidden



// YouTube API replaces the div with an iframe
#video
  position absolute
  top 50%
  left 50%
  border 0
  z-index 1
  // Dimensions will be set by JavaScript
  // Fallback CSS for browsers that don't run JS
  min-width 100vw
  min-height 100vh
  transform translate(-50%, -50%)

  // When it's still a div (before YouTube loads)
  &:not(iframe)
    top 0
    left 0
    width 100%
    height 100%
    transform none

.ie8-poster
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  z-index 1
  object-fit cover
  object-position center center

.video-background
  background #000
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  overflow hidden

.video-foreground
  position absolute
  top 0
  left 0
  width 100%
  height 100%

.close-video
  position absolute
  top 20px
  right 20px
  z-index 9999
  color #fff

/**
 * ----------------
 * SUPPORTED GAMES
 * ----------------
 **/
section.supported-games
  background url(supported_games_bg_image) supported_games_bg_color no-repeat center 0
  overflow visible

  .section-content-container
    padding 40px 0

.games-listing
  padding-left 0
  img
    text-align center
    display inline-block
    margin 15px

.divisions-grid
  display flex
  flex-wrap wrap
  justify-content center
  gap 20px
  margin-top 40px
  padding 0 20px

  .division-icon
    display flex
    flex-direction column
    align-items center
    text-decoration none
    padding 15px
    border-radius 12px
    background rgba(255, 255, 255, 0.05)
    border 1px solid rgba(255, 255, 255, 0.1)
    transition all 0.3s ease
    width 100px

    &:hover
      background rgba(255, 255, 255, 0.1)
      border-color rgba(255, 255, 255, 0.3)
      transform translateY(-5px)

      img
        transform scale(1.1)

    img
      width 48px
      height 48px
      object-fit contain
      transition transform 0.3s ease
      filter drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3))

    .division-name
      color #fff
      font-size 11px
      font-family font_face
      text-transform uppercase
      letter-spacing 0.5px
      margin-top 10px
      text-align center
      opacity 0.8
      line-height 1.2

  @media (max-width: 720px)
    gap 10px

    .division-icon
      width 80px
      padding 10px

      img
        width 36px
        height 36px

      .division-name
        font-size 9px

/**
 * ----------------
 * FOUNDED AREA
 * ----------------
 **/
section.founded-info
  background-image url(founded_bg_image) , url(founded_bg_top_border_image)
  background-color founded_info_bg_color
  background-position center 0, center 0
  background-repeat no-repeat, repeat-x
  position relative

  .section-blurb
    width 50%
    flex none

  .section-image
    position absolute
    right -150px
    top -175px

/**
 * ----------------
 * HOLIDAY SECTION
 * ----------------
 **/
section.holiday-section
  background linear-gradient(180deg, #1a0a0a 0%, #2d1515 50%, #1a0a0a 100%)
  background-color #1a0a0a
  padding 80px 0
  position relative
  overflow hidden
  z-index 10

.snowflakes
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  pointer-events none
  overflow hidden
  z-index 1

.snowflake
  position absolute
  top -20px
  color rgba(255, 255, 255, 0.7)
  font-size 1rem
  animation snowfall linear infinite
  text-shadow 0 0 5px rgba(255, 255, 255, 0.3)

  &:nth-child(1)
    left 5%
    font-size 0.8rem
    animation-duration 15s
    animation-delay 0s
    opacity 0.6

  &:nth-child(2)
    left 15%
    font-size 1.2rem
    animation-duration 12s
    animation-delay 2s
    opacity 0.8

  &:nth-child(3)
    left 25%
    font-size 0.6rem
    animation-duration 18s
    animation-delay 4s
    opacity 0.5

  &:nth-child(4)
    left 35%
    font-size 1rem
    animation-duration 14s
    animation-delay 1s
    opacity 0.7

  &:nth-child(5)
    left 45%
    font-size 0.9rem
    animation-duration 16s
    animation-delay 3s
    opacity 0.6

  &:nth-child(6)
    left 55%
    font-size 1.1rem
    animation-duration 13s
    animation-delay 5s
    opacity 0.8

  &:nth-child(7)
    left 65%
    font-size 0.7rem
    animation-duration 17s
    animation-delay 2.5s
    opacity 0.5

  &:nth-child(8)
    left 75%
    font-size 1rem
    animation-duration 15s
    animation-delay 1.5s
    opacity 0.7

  &:nth-child(9)
    left 85%
    font-size 0.8rem
    animation-duration 14s
    animation-delay 4.5s
    opacity 0.6

  &:nth-child(10)
    left 95%
    font-size 1.3rem
    animation-duration 11s
    animation-delay 0.5s
    opacity 0.8

@keyframes snowfall
  0%
    transform translateY(-20px) rotate(0deg)
    opacity 0
  10%
    opacity 1
  90%
    opacity 1
  100%
    transform translateY(100vh) rotate(360deg)
    opacity 0

.holiday-content
  text-align center
  max-width 900px
  margin 0 auto

  h1
    font-family font_face
    font-size 2.5rem
    color #fff
    margin-bottom 20px
    text-shadow 0 2px 10px rgba(0, 0, 0, 0.5)

  p
    font-size 1.1rem
    color rgba(255, 255, 255, 0.85)
    margin-bottom 30px
    line-height 1.7

.holiday-badge
  display inline-flex
  align-items center
  gap 12px
  background linear-gradient(135deg, rgba(139, 30, 30, 0.8) 0%, rgba(80, 20, 20, 0.9) 100%)
  border 1px solid rgba(255, 100, 100, 0.3)
  padding 10px 25px
  border-radius 30px
  margin-bottom 25px
  font-family font_face
  text-transform uppercase
  letter-spacing 2px
  font-size 13px
  color #fff

  i
    color #ff6b6b
    animation snowflake-spin 3s linear infinite

  i:last-child
    animation-direction reverse

@keyframes snowflake-spin
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)

.holiday-video
  position relative
  width 100%
  max-width 800px
  margin 0 auto
  border-radius 12px
  overflow hidden
  box-shadow 0 10px 40px rgba(0, 0, 0, 0.5), 0 0 0 1px rgba(255, 100, 100, 0.2)

  &::before
    content ''
    display block
    padding-top 56.25%

  iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    border none

@media (max-width: 720px)
  section.holiday-section
    padding 50px 0

  .holiday-content
    h1
      font-size 1.8rem

    p
      font-size 1rem

  .holiday-badge
    font-size 11px
    padding 8px 18px

/**
 * ----------------
 * SOCIAL MEDIA
 * ----------------
 **/
section.social-media
  background url(social_media_bg_image) social_media_section_bg_color no-repeat center 0

.social-icons
  display flex
  justify-content center
  gap 25px
  margin-top 30px
  flex-wrap wrap

  .social-icon
    display flex
    flex-direction column
    align-items center
    text-decoration none
    color #fff
    padding 20px
    border-radius 12px
    background rgba(255, 255, 255, 0.05)
    border 1px solid rgba(255, 255, 255, 0.1)
    transition all 0.3s ease
    min-width 90px

    svg
      width 40px
      height 40px
      transition all 0.3s ease

    span
      font-family font_face
      font-size 12px
      text-transform uppercase
      letter-spacing 1px
      margin-top 10px
      opacity 0.8

    &:hover
      transform translateY(-5px)
      border-color rgba(255, 255, 255, 0.3)

      svg
        transform scale(1.15)

    &.discord:hover
      background rgba(88, 101, 242, 0.2)
      border-color rgba(88, 101, 242, 0.5)
      svg
        color #5865F2

    &.twitch:hover
      background rgba(145, 70, 255, 0.2)
      border-color rgba(145, 70, 255, 0.5)
      svg
        color #9146FF

    &.twitter:hover
      background rgba(255, 255, 255, 0.1)
      border-color rgba(255, 255, 255, 0.5)
      svg
        color #fff

    &.steam:hover
      background rgba(0, 114, 172, 0.2)
      border-color rgba(0, 114, 172, 0.5)
      svg
        color #00adee

    &.youtube:hover
      background rgba(255, 0, 0, 0.2)
      border-color rgba(255, 0, 0, 0.5)
      svg
        color #FF0000

  @media (max-width: 720px)
    gap 15px

    .social-icon
      padding 15px
      min-width 70px

      svg
        width 30px
        height 30px

      span
        font-size 10px

/**
 * ----------------
 * HONOR CLAN AREA
 * ----------------
 **/
section.honor-info
  background url(honor_bg_image) honor_section_bg_color repeat-x top

/**
 * ----------------
 * APPLY AREA
 * ----------------
 **/
section.apply-info
  background url(apply_bg_image) apply_section_bg_color no-repeat center 0
