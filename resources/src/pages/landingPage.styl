/**
 * ----------------
 * HERO AREA
 * ----------------
 **/

@import "partials/games"

/**
 * ----------------
 * STATS BAR
 * ----------------
 **/
.stats-bar
  background linear-gradient(135deg, rgba(223, 69, 69, 0.9) 0%, rgba(139, 30, 30, 0.95) 100%)
  padding 30px 0
  position relative
  z-index 10

  .stats-container
    display flex
    justify-content center
    align-items center
    gap 60px
    max-width 1200px
    margin 0 auto
    padding 0 20px

  .stat-item
    text-align center
    color #fff

    .stat-number
      display block
      font-size 48px
      font-weight 700
      font-family font_face
      line-height 1
      text-shadow 0 2px 10px rgba(0, 0, 0, 0.3)

    .stat-label
      display block
      font-size 14px
      text-transform uppercase
      letter-spacing 2px
      opacity 0.9
      margin-top 8px

  @media (max-width: bp_tablet)
    .stats-container
      flex-wrap wrap
      gap spacing_xl

    .stat-item
      flex 0 0 45%

      .stat-number
        font-size 36px

.aod-logo
  drop-shadow-md()
  width 250px

.hero-text
  color #fff
  z-index 5
  position fixed
  top 70px
  left 50%
  transform translateX(-50%)
  text-align center
  width 100%
  max-width 1200px
  pointer-events none

  .play-button
    pointer-events auto
    background url('/images/play-button.png') no-repeat
    width 53px
    height 61px
    margin 0 auto
    margin-top spacing_3xl
    text-indent -9999px
    transition filter transition_slower ease

    &:hover
      drop-shadow-white()
      transition filter transition_slower ease
      cursor pointer

  h1
    font-size 48px
    text-shadow 0 0 2px rgba(0, 0, 0, .4)

.hero-video
  position fixed
  top 0
  left 0
  width 100vw
  height 100vh
  z-index -1
  overflow hidden
  transition opacity transition_normal ease
  background darker_bg
  pointer-events none

.twitch-live
  right spacing_2xl
  color aod_red
  position relative

.intro-video iframe
  width 100vw
  height 75vh

.grid
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  z-index 2
  background-image url('/images/grid.png') , url('/images/video-overlay.png')
  background-color rgba(0, 0, 0, .5)
  background-repeat repeat, repeat-x
  pointer-events none

.video-container
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  overflow hidden



// YouTube API replaces the div with an iframe
#video
  position absolute
  top 50%
  left 50%
  border 0
  z-index 1
  // Dimensions will be set by JavaScript
  // Fallback CSS for browsers that don't run JS
  min-width 100vw
  min-height 100vh
  transform translate(-50%, -50%)

  // When it's still a div (before YouTube loads)
  &:not(iframe)
    top 0
    left 0
    width 100%
    height 100%
    transform none

.ie8-poster
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  z-index 1
  object-fit cover
  object-position center center

.video-background
  background #000
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  overflow hidden

.video-foreground
  position absolute
  top 0
  left 0
  width 100%
  height 100%

.close-video
  position absolute
  top 20px
  right 20px
  z-index 9999
  color #fff

/**
 * ----------------
 * SUPPORTED GAMES
 * ----------------
 **/
section.supported-games
  background url(supported_games_bg_image) supported_games_bg_color no-repeat center 0
  overflow visible
  position relative
  z-index 2
  section-fade-bottom()

  .section-content-container
    padding 40px 0

  h1, .section-blurb
    position relative
    z-index 0
    pointer-events none

    a
      pointer-events auto

.games-listing
  padding-left 0
  img
    text-align center
    display inline-block
    margin 15px

.divisions-grid
  display flex
  flex-wrap wrap
  justify-content center
  gap spacing_lg
  margin-top spacing_2xl
  padding 0 spacing_lg
  position relative
  z-index 5

  .division-icon
    display flex
    flex-direction column
    align-items center
    text-decoration none
    padding spacing_md
    border-radius 12px
    background overlay_light
    border 1px solid border_subtle
    transition all transition_normal ease
    width 100px
    position relative
    z-index 10

    &:hover
      background rgba(255, 255, 255, 0.1)
      border-color border_medium
      transform translateY(-5px)

      img
        opacity 1
        transform scale(1.1)
        filter drop-shadow(0 0 8px alpha(hover_glow, 0.6))

    img
      width 48px
      height 48px
      object-fit contain
      opacity 0.7
      transition all transition_normal ease
      filter drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3))
      pointer-events none

    .division-name
      color header_color
      font-size 11px
      font-family font_face
      text-transform uppercase
      letter-spacing 0.5px
      margin-top spacing_sm
      text-align center
      opacity 0.8
      line-height 1.2
      pointer-events none

  @media (max-width: bp_tablet)
    gap spacing_sm

    .division-icon
      width 80px
      padding spacing_sm

      img
        width 36px
        height 36px

      .division-name
        font-size 9px

/**
 * ----------------
 * FOUNDED AREA
 * ----------------
 **/
section.founded-info
  background-image url(founded_bg_image) , url(founded_bg_top_border_image)
  background-color founded_info_bg_color
  background-position center 0, center 0
  background-repeat no-repeat, repeat-x
  position relative
  z-index 1

  .section-blurb
    width 50%
    flex none

  .section-image
    position absolute
    right -150px
    top -175px

/**
 * ----------------
 * HIGHLIGHTED EVENT SECTION
 * ----------------
 **/
section.highlighted-event-section
  padding 80px 0
  position relative
  overflow hidden
  z-index 10

  &.holiday-theme
    background repeating-linear-gradient(45deg, transparent, transparent 40px, rgba(139, 30, 30, 0.05) 40px, rgba(139, 30, 30, 0.05) 80px), linear-gradient(180deg, #1a0a0a 0%, #2d1515 50%, #1a0a0a 100%)
    background-color #1a0a0a

  &.default-theme
    background linear-gradient(180deg, #0a0a0a 0%, #151515 50%, #0a0a0a 100%)

  &.esports-theme
    background linear-gradient(180deg, #0a0a14 0%, #14142a 50%, #0a0a14 100%)

  &.community-theme
    background linear-gradient(180deg, #0a140a 0%, #142a14 50%, #0a140a 100%)

.snowflakes
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  pointer-events none
  overflow hidden
  z-index 1

.snowflake
  position absolute
  top -50px
  color rgba(255, 255, 255, 0.7)
  font-size 1.5rem
  animation snowfall linear infinite
  text-shadow 0 0 5px rgba(255, 255, 255, 0.3)

  &:nth-child(1)
    left 5%
    font-size 1.4rem
    animation-duration 15s
    animation-delay 0s
    opacity 0.6

  &:nth-child(2)
    left 15%
    font-size 2.2rem
    animation-duration 12s
    animation-delay 2s
    opacity 0.8

  &:nth-child(3)
    left 25%
    font-size 1rem
    animation-duration 18s
    animation-delay 4s
    opacity 0.5

  &:nth-child(4)
    left 35%
    font-size 1.8rem
    animation-duration 14s
    animation-delay 1s
    opacity 0.7

  &:nth-child(5)
    left 45%
    font-size 1.5rem
    animation-duration 16s
    animation-delay 3s
    opacity 0.6

  &:nth-child(6)
    left 55%
    font-size 2rem
    animation-duration 13s
    animation-delay 5s
    opacity 0.8

  &:nth-child(7)
    left 65%
    font-size 1.2rem
    animation-duration 17s
    animation-delay 2.5s
    opacity 0.5

  &:nth-child(8)
    left 75%
    font-size 1.8rem
    animation-duration 15s
    animation-delay 1.5s
    opacity 0.7

  &:nth-child(9)
    left 85%
    font-size 1.4rem
    animation-duration 14s
    animation-delay 4.5s
    opacity 0.6

  &:nth-child(10)
    left 95%
    font-size 2.4rem
    animation-duration 11s
    animation-delay 0.5s
    opacity 0.8

@keyframes snowfall
  0%
    transform translateY(0) rotate(0deg)
    opacity 0
  5%
    opacity 1
  95%
    opacity 1
  100%
    transform translateY(calc(100vh + 100px)) rotate(360deg)
    opacity 0

.highlighted-event-content
  text-align center
  max-width 900px
  margin 0 auto

  h1
    font-family font_face
    font-size 2.5rem
    color #fff
    margin-bottom 20px
    text-shadow 0 2px 10px rgba(0, 0, 0, 0.5)

  p
    font-size 1.1rem
    color rgba(255, 255, 255, 0.85)
    margin-bottom 30px
    line-height 1.7

.highlighted-event-badge
  display inline-flex
  align-items center
  gap 12px
  background linear-gradient(135deg, rgba(139, 30, 30, 0.8) 0%, rgba(80, 20, 20, 0.9) 100%)
  border 1px solid rgba(255, 100, 100, 0.3)
  padding 10px 25px
  border-radius 30px
  margin-bottom 25px
  font-family font_face
  text-transform uppercase
  letter-spacing 2px
  font-size 13px
  color #fff

  .holiday-theme &
    i
      color #ff6b6b
      animation snowflake-spin 3s linear infinite

    i:last-child
      animation-direction reverse

@keyframes snowflake-spin
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)

.highlighted-event-video
  position relative
  width 100%
  max-width 800px
  margin 0 auto
  border-radius 12px
  overflow hidden
  box-shadow 0 10px 40px rgba(0, 0, 0, 0.5), 0 0 0 1px rgba(255, 100, 100, 0.2)

  &::before
    content ''
    display block
    padding-top 56.25%

  iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    border none

.highlighted-event-cta
  display inline-flex
  align-items center
  gap 10px
  padding spacing_md spacing_2xl
  background linear-gradient(135deg, aod_red 0%, aod_red_dark 100%)
  color #fff
  font-family font_face
  font-size 14px
  text-transform uppercase
  letter-spacing 2px
  text-decoration none
  border-radius 6px
  margin-top spacing_lg
  transition all transition_normal ease

  &:hover
    background linear-gradient(135deg, aod_red_light 0%, aod_red 100%)
    transform translateY(-3px)
    box-shadow 0 8px 25px alpha(aod_red, 0.4)

@media (max-width: bp_tablet)
  section.highlighted-event-section
    padding 50px 0

  .highlighted-event-content
    h1
      font-size 1.8rem

    p
      font-size 1rem

  .highlighted-event-badge
    font-size 11px
    padding 8px 18px

/**
 * ----------------
 * MERCH SECTION
 * ----------------
 **/
section.merch-section
  background linear-gradient(180deg, #0a0a0a 0%, #151515 50%, #0a0a0a 100%)
  padding 80px 0
  position relative
  z-index 1

  .section-content-container
    width 100%
    max-width 1400px
    padding 0 spacing_xl

    @media (min-width: bp_desktop_lg)
      max-width 1600px

.merch-carousel
  display flex
  align-items center
  gap 15px
  margin 40px 0

.merch-viewport
  overflow hidden
  flex 1
  mask-image linear-gradient(to right, transparent 0%, black 8%, black 92%, transparent 100%)
  -webkit-mask-image linear-gradient(to right, transparent 0%, black 8%, black 92%, transparent 100%)

.merch-grid
  display flex
  gap 25px

.merch-item
  display flex
  flex-direction column
  align-items center
  text-decoration none
  background rgba(255, 255, 255, 0.03)
  border 1px solid border_subtle
  border-radius 12px
  padding spacing_lg
  transition all transition_normal ease
  flex-shrink 0
  width 220px

  &:hover
    border-color alpha(aod_red, 0.6)
    background alpha(aod_red, 0.1)
    box-shadow 0 0 25px alpha(aod_red, 0.3)

  img
    width 100%
    height 220px
    object-fit contain
    border-radius 8px
    margin-bottom spacing_md
    transition all transition_normal ease
    pointer-events none
    filter drop-shadow(0 4px 8px rgba(0, 0, 0, 0.4))

  &:hover img
    filter drop-shadow(0 4px 8px rgba(0, 0, 0, 0.4)) brightness(1.1)

  span
    font-family font_face
    font-size 13px
    color rgba(255, 255, 255, 0.9)
    text-transform uppercase
    letter-spacing 1px
    text-align center
    pointer-events none

.merch-nav
  background overlay_light
  border 1px solid border_medium
  color header_color
  width 45px
  height 45px
  border-radius 50%
  font-size 28px
  cursor pointer
  transition all transition_normal ease
  flex-center()
  flex-shrink 0

  &:hover
    background rgba(aod_red, 0.3)
    border-color rgba(aod_red, 0.6)

  &:disabled
    opacity 0.3
    cursor not-allowed

.merch-cta
  display inline-block
  padding spacing_md spacing_2xl
  background linear-gradient(135deg, aod_red 0%, aod_red_dark 100%)
  color header_color
  font-family font_face
  font-size 14px
  text-transform uppercase
  letter-spacing 2px
  text-decoration none
  border-radius 6px
  margin-top spacing_lg
  transition all transition_normal ease

  &:hover
    background linear-gradient(135deg, aod_red_light 0%, aod_red 100%)
    transform translateY(-3px)
    box-shadow 0 8px 25px rgba(aod_red, 0.4)

@media (max-width: bp_tablet)
  .merch-carousel
    gap spacing_sm

  .merch-nav
    display none

  .merch-item
    width 180px
    padding spacing_md

/**
 * ----------------
 * SOCIAL MEDIA
 * ----------------
 **/
section.social-media
  background url(social_media_bg_image) social_media_section_bg_color no-repeat center 0
  position relative
  z-index 2
  section-fade-bottom()

.social-icons
  display flex
  justify-content center
  gap 25px
  margin-top spacing_xl
  flex-wrap wrap

  .social-icon
    display flex
    flex-direction column
    align-items center
    text-decoration none
    color header_color
    padding spacing_lg
    border-radius 12px
    background rgba(255, 255, 255, 0.05)
    border 1px solid border_subtle
    transition all transition_normal ease
    min-width 90px
    cursor pointer

    svg
      width 40px
      height 40px
      transition all transition_normal ease
      pointer-events none

    span
      font-family font_face
      font-size 12px
      text-transform uppercase
      letter-spacing 1px
      margin-top spacing_sm
      opacity 0.8
      pointer-events none

    &:hover
      transform translateY(-5px)
      border-color border_medium

      svg
        transform scale(1.15)

    &.discord:hover
      background alpha(discord_color, 0.2)
      border-color alpha(discord_color, 0.5)
      svg
        color discord_color

    &.twitch:hover
      background alpha(twitch_color, 0.2)
      border-color alpha(twitch_color, 0.5)
      svg
        color twitch_color

    &.twitter:hover
      background alpha(#1DA1F2, 0.15)
      border-color alpha(#1DA1F2, 0.4)
      svg
        color #1DA1F2

    &.steam:hover
      background alpha(steam_color, 0.2)
      border-color alpha(steam_color, 0.5)
      svg
        color steam_color

    &.youtube:hover
      background alpha(youtube_color, 0.2)
      border-color alpha(youtube_color, 0.5)
      svg
        color youtube_color

  @media (max-width: bp_tablet)
    gap spacing_md

    .social-icon
      padding spacing_md
      min-width 70px

      svg
        width 30px
        height 30px

      span
        font-size 10px

/**
 * ----------------
 * HONOR CLAN AREA
 * ----------------
 **/
section.honor-info
  background url(honor_bg_image) honor_section_bg_color repeat-x top

/**
 * ----------------
 * APPLY AREA
 * ----------------
 **/
section.apply-info
  background url(apply_bg_image) apply_section_bg_color no-repeat center 0
  position relative
  z-index 0

  &::before
    content ''
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background linear-gradient(135deg, rgba(0, 0, 0, 0.4) 0%, rgba(139, 30, 30, 0.2) 100%)
    pointer-events none
    z-index 1

  .section-content-container
    position relative
    z-index 2

  h1
    text-shadow-lg()

  .section-blurb
    text-shadow-sm()
