/**
 * ----------------
 * HERO AREA
 * ----------------
 **/

@import "partials/games"

/**
 * ----------------
 * STATS BAR
 * ----------------
 **/
.stats-bar
  background linear-gradient(135deg, rgba(223, 69, 69, 0.9) 0%, rgba(139, 30, 30, 0.95) 100%)
  padding 30px 0
  position relative
  z-index 10

  .stats-container
    display flex
    justify-content center
    align-items center
    gap 60px
    max-width 1200px
    margin 0 auto
    padding 0 20px

  .stat-item
    text-align center
    color #fff

    .stat-number
      display block
      font-size 48px
      font-weight 700
      font-family font_face
      line-height 1
      text-shadow 0 2px 10px rgba(0, 0, 0, 0.3)

    .stat-label
      display block
      font-size 14px
      text-transform uppercase
      letter-spacing 2px
      opacity 0.9
      margin-top 8px

  @media (max-width: 720px)
    .stats-container
      flex-wrap wrap
      gap 30px

    .stat-item
      flex 0 0 45%

      .stat-number
        font-size 36px

.aod-logo
  filter drop-shadow(0px 0px 5px #000)
  -webkit-filter drop-shadow(0px 0px 5px #000)
  width 250px

.hero-video
  position fixed
  top 0
  left 0
  width 100vw
  height 100vh
  z-index -1
  overflow hidden
  transition opacity 0.3s ease
  background #000  // Fallback background

  .hero-text
    color #fff
    z-index 3
    position fixed
    top 70px
    left 50%
    transform translateX(-50%)
    text-align center
    width 100%
    max-width 1200px

    .play-button
      background url('/images/play-button.png') no-repeat
      width 53px
      height 61px
      margin 0 auto
      margin-top 60px
      text-indent -9999px
      transition filter 0.6s ease

      &:hover
        filter drop-shadow(0px 0px 10px #fff)
        -webkit-filter drop-shadow(0px 0px 10px #fff)
        transition filter 0.6s ease
        cursor pointer

    h1
      font-size 48px
      text-shadow 0 0 2px rgba(0, 0, 0, .4)

.twitch-live
  right 40px
  color #df4545
  position relative

.intro-video iframe
  width 100vw
  height 75vh

.grid
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  z-index 2
  background-image url('/images/grid.png') , url('/images/video-overlay.png')
  background-color rgba(0, 0, 0, .5)
  background-repeat repeat, repeat-x

.video-container
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  overflow hidden



// YouTube API replaces the div with an iframe
#video
  position absolute
  top 50%
  left 50%
  border 0
  z-index 1
  // Dimensions will be set by JavaScript
  // Fallback CSS for browsers that don't run JS
  min-width 100vw
  min-height 100vh
  transform translate(-50%, -50%)

  // When it's still a div (before YouTube loads)
  &:not(iframe)
    top 0
    left 0
    width 100%
    height 100%
    transform none

.ie8-poster
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  z-index 1
  object-fit cover
  object-position center center

.video-background
  background #000
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  overflow hidden

.video-foreground
  position absolute
  top 0
  left 0
  width 100%
  height 100%

.close-video
  position absolute
  top 20px
  right 20px
  z-index 9999
  color #fff

/**
 * ----------------
 * SUPPORTED GAMES
 * ----------------
 **/
section.supported-games
  background url(supported_games_bg_image) supported_games_bg_color no-repeat center 0
  overflow visible

  .section-content-container
    padding 40px 0

.games-listing
  padding-left 0
  img
    text-align center
    display inline-block
    margin 15px

.divisions-grid
  display flex
  flex-wrap wrap
  justify-content center
  gap 20px
  margin-top 40px
  padding 0 20px

  .division-icon
    display flex
    flex-direction column
    align-items center
    text-decoration none
    padding 15px
    border-radius 12px
    background rgba(255, 255, 255, 0.05)
    border 1px solid rgba(255, 255, 255, 0.1)
    transition all 0.3s ease
    width 100px

    &:hover
      background rgba(255, 255, 255, 0.1)
      border-color rgba(255, 255, 255, 0.3)
      transform translateY(-5px)

      img
        transform scale(1.1)

    img
      width 48px
      height 48px
      object-fit contain
      transition transform 0.3s ease
      filter drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3))

    .division-name
      color #fff
      font-size 11px
      font-family font_face
      text-transform uppercase
      letter-spacing 0.5px
      margin-top 10px
      text-align center
      opacity 0.8
      line-height 1.2

  @media (max-width: 720px)
    gap 10px

    .division-icon
      width 80px
      padding 10px

      img
        width 36px
        height 36px

      .division-name
        font-size 9px

/**
 * ----------------
 * FOUNDED AREA
 * ----------------
 **/
section.founded-info
  background-image url(founded_bg_image) , url(founded_bg_top_border_image)
  background-color founded_info_bg_color
  background-position center 0, center 0
  background-repeat no-repeat, repeat-x
  position relative

  .section-blurb
    width 50%
    flex none

  .section-image
    position absolute
    right -150px
    top -175px

/**
 * ----------------
 * SOCIAL MEDIA
 * ----------------
 **/
section.social-media
  background url(social_media_bg_image) social_media_section_bg_color no-repeat center 0

.social-icons
  display flex
  justify-content center
  gap 25px
  margin-top 30px
  flex-wrap wrap

  .social-icon
    display flex
    flex-direction column
    align-items center
    text-decoration none
    color #fff
    padding 20px
    border-radius 12px
    background rgba(255, 255, 255, 0.05)
    border 1px solid rgba(255, 255, 255, 0.1)
    transition all 0.3s ease
    min-width 90px

    svg
      width 40px
      height 40px
      transition all 0.3s ease

    span
      font-size 12px
      text-transform uppercase
      letter-spacing 1px
      margin-top 10px
      opacity 0.8

    &:hover
      transform translateY(-5px)
      border-color rgba(255, 255, 255, 0.3)

      svg
        transform scale(1.15)

    &.discord:hover
      background rgba(88, 101, 242, 0.2)
      border-color rgba(88, 101, 242, 0.5)
      svg
        color #5865F2

    &.twitch:hover
      background rgba(145, 70, 255, 0.2)
      border-color rgba(145, 70, 255, 0.5)
      svg
        color #9146FF

    &.twitter:hover
      background rgba(255, 255, 255, 0.1)
      border-color rgba(255, 255, 255, 0.5)
      svg
        color #fff

    &.steam:hover
      background rgba(0, 114, 172, 0.2)
      border-color rgba(0, 114, 172, 0.5)
      svg
        color #00adee

    &.youtube:hover
      background rgba(255, 0, 0, 0.2)
      border-color rgba(255, 0, 0, 0.5)
      svg
        color #FF0000

  @media (max-width: 720px)
    gap 15px

    .social-icon
      padding 15px
      min-width 70px

      svg
        width 30px
        height 30px

      span
        font-size 10px

/**
 * ----------------
 * HONOR CLAN AREA
 * ----------------
 **/
section.honor-info
  background url(honor_bg_image) honor_section_bg_color repeat-x top

/**
 * ----------------
 * APPLY AREA
 * ----------------
 **/
section.apply-info
  background url(apply_bg_image) apply_section_bg_color no-repeat center 0
